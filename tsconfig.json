{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext", // ✅ Use CommonJS to avoid ESM runtime issues with ts-node
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "express"],
    "outDir": "dist", // ✅ Output compiled server files here
    "rootDir": ".",    // ✅ Project root
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false, // ✅ Important: allow emitting compiled server files
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server/**/*.ts"
, "server/server.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
