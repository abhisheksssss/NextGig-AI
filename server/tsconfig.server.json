{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "..",
    "baseUrl": "..",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": [
    "../server/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.next",
    "../dist"
  ]
}
