{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@/helper/*": ["./src/helper/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/Component/*": ["./src/Component/*"],
      "@/context/*": ["./src/context/*"]
    },
    "noEmit": false,
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.next",
    "../dist"
  ],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}